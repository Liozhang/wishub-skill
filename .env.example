# WisHub Skill Environment Configuration

# Application
APP_NAME=wishub-skill
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Authentication
AUTH_REQUIRED=true
AUTH_HEADER=X-API-Key

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=wishub
POSTGRES_PASSWORD=wishub
POSTGRES_DB=wishub_skill
POSTGRES_POOL_SIZE=20

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=wishub-skill-storage
MINIO_SECURE=false

# Elasticsearch
ES_HOST=localhost:9200
ES_INDEX_PREFIX=wishub-skill

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
